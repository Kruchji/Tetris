<Window x:Class="tetris.Previews.UserInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tetris.Previews"
        mc:Ignorable="d"
        Title="New highscore!" Height="150" Width="300" MinHeight="150" MinWidth="300" MaxHeight="150" MaxWidth="300"
        Background="#FF00CEA1" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Text="New highscore! Enter your username:" FontSize="15" FontWeight="Bold" Margin="5,5,5,15" TextAlignment="Center"/>
        <TextBox x:Name="ResponseTextBox" Height="25" Width="200" FontSize="15" FontWeight="Bold"/>
        <Button Content="OK" Click="OKButton_Click" Margin="105,15,105,5" FontWeight="Bold"/>
    </StackPanel>
</Window>
